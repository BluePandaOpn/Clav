{
  "manifest_version": 3,
  "name": "Password Manager Pro Autofill",
  "description": "Autocompletado estilo Bitwarden para Password Manager Pro.",
  "version": "2.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Password Manager Pro"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "autofill@password-manager-pro.local",
      "strict_min_version": "109.0"
    }
  }
}
